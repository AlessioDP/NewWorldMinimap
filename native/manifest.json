{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Sample App",
    "version": "0.0.0",
    "minimum-overwolf-version": "0.120.0",
    "author": "Overwolf",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "description": "Sample app for new developers"
  },
  "permissions": [
    "Hotkeys"
  ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21216]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [21216]
        },
        "start_minimized": true
      }
    ],
    "hotkeys": {
      "sample_app_showhide": {
        "title": "Show In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      }
    },
    "game_events": [21216],
    "start_window": "background",
    "windows": {
      "background": {
        "file": "windows/background/background.html",
        "native_window": true,
        "desktop_only": true,
        "background_optimization": false,
        "is_background_page": true,
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": false,
        "size": {
          "width": 100,
          "height": 100
        },
        "grab_keyboard_focus": false
      },
      "desktop": {
        "file": "windows/desktop/desktop.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 200,
          "height": 200
        },
        "min_size": {
          "width": 200,
          "height": 200
        },
        "max_size": {
          "width": 1920,
          "height": 1080
        },
        "desktop_only": true
      },
      "in_game": {
        "file": "windows/in-game/in-game.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 620,
          "height": 600
        },
        "min_size": {
          "width": 620,
          "height": 600
        }
      },
      "notification": {
        "file": "windows/notification/notification.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 320,
          "height": 260
        },
        "min_size": {
          "width": 320,
          "height": 260
        }
      }
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://overwolf.github.io",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com"
      ]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
